{
  "name": "exponent-protocol",
  "version": "1.0.0",
  "description": "Smart contracts for Exponent project",
  "main": "index.js",
  "scripts": {
    "test": "npx hardhat test ./test/*.js",
    "test:report": "TEST_REPORT=true npx hardhat test ./test/*.js > test-report.json",
    "test:integration": "npx hardhat --config hardhat.integration-config.js test ./test/integration/*.js",
    "test:integration:report": "TEST_REPORT=true npx hardhat --config hardhat.integration-config.js test ./test/integration/*.js > test-report.json",
    "test:integration:trace": "npx hardhat --config hardhat.integration-config.js test --logs ./test/integration/*.js",
    "test:gas": "REPORT_GAS=true npx hardhat test ./test/*.js",
    "test:integration:gas": "REPORT_GAS=true npx hardhat --config hardhat.integration-config.js test ./test/integration/*.js",
    "test:coverage": "npx hardhat coverage --testfiles './test/*.js'",
    "eslint": "eslint .",
    "sollint": "prettier --write 'contracts/**/*.sol'",
    "lint": "npm run eslint && npm run sollint",
    "hint": "npx hardhat check",
    "compile": "npx hardhat compile",
    "format": "prettier --write ./test",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/exponent-ai/protocol.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/exponent-ai/protocol/issues"
  },
  "homepage": "https://github.com/exponent-ai/protocol#readme",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "chai": "^4.3.4",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.0.32",
    "hardhat": "^2.1.1",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": "^6.0.0",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.6",
    "solidity-coverage": "^0.7.16"
  },
  "dependencies": {
    "@enzymefinance/protocol": "^2.0.5",
    "@openzeppelin/contracts": "^4.0.0",
    "dotenv": "^8.2.0",
    "hardhat-abi-exporter": "^2.2.1",
    "hardhat-tracer": "^1.0.0-alpha.3"
  }
}
