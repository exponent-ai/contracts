{
  "name": "exponent-protocol",
  "version": "v0.1.0-alpha",
  "description": "Smart contracts for Exponent project",
  "main": "index.js",
  "scripts": {
    "test": "npx hardhat test ./test/*.ts",
    "test:report": "TEST_REPORT=true npx hardhat test ./test/*.ts > test-report.json",
    "test:integration": "npx hardhat --config hardhat.integration-config.ts test ./test/integration/*.ts",
    "test:lifecycle": "npx hardhat --config hardhat.integration-config.ts test ./test/lifecycle/*.ts",
    "test:lifecycle:gas": "REPORT_GAS=true npx hardhat --config hardhat.integration-config.ts test ./test/lifecycle/*.ts",
    "test:integration:report": "TEST_REPORT=true npx hardhat --config hardhat.integration-config.ts test ./test/integration/*.ts > test-report.json",
    "test:integration:trace": "npx hardhat --config hardhat.integration-config.ts test --logs ./test/integration/*.ts",
    "test:gas": "REPORT_GAS=true npx hardhat test ./test/*.ts",
    "test:integration:gas": "REPORT_GAS=true npx hardhat --config hardhat.integration-config.ts test ./test/integration/*.ts",
    "test:coverage": "npx hardhat coverage --testfiles './test/*.ts'",
    "eslint": "eslint .",
    "sollint": "prettier --write 'contracts/**/*.sol'",
    "lint": "npm run eslint && npm run sollint",
    "hint": "npx hardhat check",
    "compile": "npx hardhat compile && npx hardhat size-contracts",
    "format": "prettier --write ./test ./src",
    "prepare": "husky install",
    "deploy": "npx hardhat run scripts/deploy.js",
    "deploy:kovan": "npx hardhat run scripts/deploy.js --network kovan",
    "deploy:local": "npx hardhat run --network localhost scripts/local-deploy.ts",
    "send:ether": "npx hardhat run --network localhost scripts/local-send-ether.ts",
    "send:token": "npx hardhat run --network localhost scripts/local-send-token.ts",
    "get:address": "npx hardhat run --network localhost scripts/local-get-addresses.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/exponent-ai/protocol.git"
  },
  "author": "",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/exponent-ai/protocol/issues"
  },
  "homepage": "https://github.com/exponent-ai/protocol#readme",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.7.1",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.5",
    "hardhat": "2.6.1",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": "^6.0.0",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.17",
    "solidity-coverage": "^0.7.16",
    "ts-node": "^10.2.1",
    "typechain": "^5.1.2",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@enzymefinance/protocol": "^2.0.11",
    "@openzeppelin/contracts": "^4.3.0",
    "dotenv": "^8.2.0",
    "hardhat-abi-exporter": "^2.2.1",
    "hardhat-contract-sizer": "^2.1.0",
    "hardhat-tracer": "^1.0.0-alpha.3",
    "tsconfig-paths": "^3.10.1"
  }
}
